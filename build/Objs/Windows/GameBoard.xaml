<Window x:Class="Client.Objs.Windows.GameBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Objs.Windows"
        mc:Ignorable="d"
        Title="GameBoard" Height="720" Width="1280" Background="#FFFC575E" WindowState="Maximized" WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="historyPannel" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="#FFF0F1F5">
            <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <Label VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="43" Content="Last lap" FontSize="24"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontWeight="Bold"/>
                <Separator Height="18" Margin="0"/>
                <Label HorizontalContentAlignment="Center" Height="39" Content="Deck" FontSize="20"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
                <StackPanel Height="110" Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="10,0,0,0">
                    <Image Margin="0,0,15,0" Height="105" Width="71" Source="/Client;component/logo.ico" Stretch="Fill" />
                    <Image Margin="0,0,15,0" Height="105" Width="71" Source="/Client;component/logo.ico" Stretch="Fill" />
                    <Image Margin="0,0,15,0" Height="105" Width="71" Source="/Client;component/logo.ico" Stretch="Fill" />
                    <Image Margin="0,0,15,0" Height="105" Width="71" Source="/Client;component/logo.ico" Stretch="Fill" />
                </StackPanel>
            </StackPanel>
            <StackPanel x:Name="rankLastLapBox" Margin="0,218,0,0">
                <StackPanel  x:Name="rankLastBox1" Margin="0,15,0,0" Orientation="Horizontal">
                    <Label Content="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="58" FontSize="24"></Label>
                    <Image Height="105" Width="71" Source="/Client;component/logo.ico" Stretch="Fill" HorizontalAlignment="Left"/>
                    <Label Content="PlayerName" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="220" FontSize="18"></Label>
                </StackPanel>
                <StackPanel  x:Name="rankLastBox2" Margin="0,15,0,0" Orientation="Horizontal">
                    <Label Content="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="58" FontSize="24"></Label>
                    <Image Height="105" Width="71" Source="/Client;component/logo.ico" Stretch="Fill" HorizontalAlignment="Left"/>
                    <Label Content="PlayerName" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="220" FontSize="18"></Label>
                </StackPanel>
                <StackPanel  x:Name="rankLastBox3" Margin="0,15,0,0" Orientation="Horizontal">
                    <Label Content="3" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="58" FontSize="24"></Label>
                    <Image Height="105" Width="71" Source="/Client;component/logo.ico" Stretch="Fill" HorizontalAlignment="Left"/>
                    <Label Content="PlayerName" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="220" FontSize="18"></Label>
                </StackPanel>
                <StackPanel  x:Name="rankLastBox4" Margin="0,15,0,0" Orientation="Horizontal">
                    <Label Content="4" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="58" FontSize="24"></Label>
                    <Image Height="105" Width="71" Source="/Client;component/logo.ico" Stretch="Fill" HorizontalAlignment="Left"/>
                    <Label Content="PlayerName" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="220" FontSize="18"></Label>
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid x:Name="gameBoardPannel" Grid.Column="1" Height="720" VerticalAlignment="Bottom" Background="#FF44BBFF">

        </Grid>
    </Grid>
</Window>
