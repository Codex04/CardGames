<Window x:Class="Client.Windows.Lobby"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Windows"
        mc:Ignorable="d"
        Title="Lobby" Height="720" Width="1280" Background="#FFFC575E" WindowState="Maximized" WindowStyle="None" ResizeMode="NoResize" KeyDown="Window_KeyDown">
    <Grid VerticalAlignment="Center" Background="#FFFC575E" Height="384">
        <StackPanel HorizontalAlignment="Center" Width="1092">
            <Label x:Name="Title" Content="Lobby" HorizontalContentAlignment="Center" VerticalAlignment="Top" Height="125" FontSize="72" RenderTransformOrigin="0.467,0.652" HorizontalAlignment="Left" Width="1092" Margin="0,0,0,50"/>
            <ProgressBar x:Name="progress" Height="25" Foreground="#FF66CC99" BorderBrush="{x:Null}" Value="0" Margin="2,0,-2,0"/>
            <Label x:Name="waitingMessage" Content="Waiting for players... (0/4)" FontSize="24" Height="48" FontStyle="Italic" HorizontalContentAlignment="Center" Margin="0,15,0,0"/>
            <Button Content="Button" Click="Button_Click"/>

        </StackPanel>
    </Grid>

</Window>
