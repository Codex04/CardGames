<Window x:Class="Client.Windows.GameBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Windows"
        mc:Ignorable="d"
        Title="GameBoard" Height="720" Width="1280" WindowState="Maximized" WindowStyle="None" ResizeMode="NoResize" KeyDown="Window_KeyDown">
    <Window.Background>
        <ImageBrush ImageSource="/Client;component/Img/CardBoard.png"/>
    </Window.Background>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Client;component/Img/CardBoard.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Stretch">
            <Label VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="43" Content="Last lap" FontSize="24"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontWeight="Bold"/>
        </StackPanel>
        <StackPanel x:Name="rankLastLapBox" Orientation="Horizontal" Margin="0,55,0,0" VerticalAlignment="Top">
            <Image Height="105" Width="71" Source="/Client;component/logo.ico" Stretch="Fill" VerticalAlignment="Top" Margin="25,10,4,0"/>
            <Image Height="105" Width="71" Source="/Client;component/logo.ico" Stretch="Fill" VerticalAlignment="Top" Margin="0,10,4,0"/>
            <Image Height="105" Width="71" Source="/Client;component/logo.ico" Stretch="Fill" VerticalAlignment="Top" Margin="0,10,4,0"/>
            <Image Height="105" Width="71" Source="/Client;component/logo.ico" Stretch="Fill" VerticalAlignment="Top" Margin="0,10,4,0"/>
        </StackPanel>
        <Label Content="Label" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="25,176,0,0" VerticalAlignment="Top" Width="71" Height="34"/>
        <Label Content="Label" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="101,176,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.981,1.688" Height="34" Width="70"/>
        <Label Content="Label" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="176,176,0,0" VerticalAlignment="Top" RenderTransformOrigin="4.308,0.525" Height="34" Width="70"/>
        <Label Content="Label" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="251,176,0,0" VerticalAlignment="Top" RenderTransformOrigin="6.218,0.68" Height="34" Width="69"/>
        <StackPanel x:Name="userDeck_panel" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Height="326" Margin="179,0,170,-126" VerticalAlignment="Bottom" Width="581">
            <Image x:Name="userCard1" HorizontalAlignment="Left" Height="148" VerticalAlignment="Center" Width="100" RenderTransformOrigin="0.5,0.5" Margin="34,0,0,0">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-17.377"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Image x:Name="userCard2" HorizontalAlignment="Left" Height="148" VerticalAlignment="Center" Width="100" RenderTransformOrigin="0.5,0.5" Margin="-40,-33,0,0">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-10.533"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Image x:Name="userCard3" HorizontalAlignment="Left" Height="148" VerticalAlignment="Center" Width="100" Margin="-42,-54,0,0" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-4.928"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Image x:Name="userCard4" HorizontalAlignment="Left" Height="148" VerticalAlignment="Center" Width="100" Margin="-45,-59,0,0"/>
            <Image x:Name="userCard5" HorizontalAlignment="Left" Height="148" VerticalAlignment="Center" Width="100" Margin="-35,-59,0,0"/>
            <Image x:Name="userCard6" HorizontalAlignment="Left" Height="148" VerticalAlignment="Center" Width="100" Margin="-42,-47,0,0" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="6.247"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Image x:Name="userCard7" HorizontalAlignment="Left" Height="148" VerticalAlignment="Center" Width="100" Margin="-38,36,0,61" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="14.594"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Image x:Name="userCard8" HorizontalAlignment="Left" Height="148" VerticalAlignment="Center" Width="100" Margin="-43,8,0,0" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="21.135"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
        </StackPanel>
        <StackPanel Grid.Column="1" AllowDrop="True" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Height="138" Margin="274,289,256,293" Width="400">
            <Image x:Name="boardCard1" Width="100" Stretch="Fill" Source="/Client;component/logo.ico"/>
            <Image x:Name="boardCard2" Width="100" Stretch="Fill" Source="/Client;component/logo.ico"/>
            <Image x:Name="boardCard3" Width="100" Stretch="Fill" Source="/Client;component/logo.ico"/>
            <Image x:Name="boardCard4" Width="100" Stretch="Fill" Source="/Client;component/logo.ico"/>
        </StackPanel>
        <Image Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Height="138" Margin="28,289,0,293" Width="142" Source="/Client;component/Img/Users/User1.png" Stretch="Fill"/>
        <Image Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Height="138" Margin="0,289,28,293" Width="142" Source="/Client;component/Img/Users/User3.png" Stretch="Fill"/>
        <Image Grid.Column="1" HorizontalAlignment="Center" Height="138" Margin="402,32,386,0" VerticalAlignment="Top" Width="142" Source="/Client;component/Img/Users/User2.png" Stretch="Fill"/>
        <Image Grid.Column="1" HorizontalAlignment="Right" Height="182" Margin="0,10,10,0" VerticalAlignment="Top" Width="124" Source="/Client;component/Img/cards/spades/10.png" Stretch="Fill"/>
        <Label Content="Label" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Right" Margin="0,197,10,0" VerticalAlignment="Top" Width="124" Height="39"/>
        <Label x:Name="player2" Content="Label" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="28,432,0,246" VerticalAlignment="Center" Width="142" Height="42"/>
        <Label x:Name="player4" Content="Label" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" Margin="402,176,386,0" VerticalAlignment="Top" Width="142" Height="42"/>
        <Label x:Name="player3" Content="Label" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Right" Margin="0,432,28,246" VerticalAlignment="Center" Width="142" Height="42"/>
    </Grid>
</Window>
