<Window x:Class="Client.Windows.GameBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Windows"
        mc:Ignorable="d"
        Title="GameBoard" Height="720" Width="1280" WindowState="Maximized" WindowStyle="None" ResizeMode="NoResize" KeyDown="Window_KeyDown">
    <Window.Background>
        <ImageBrush ImageSource="/Client;component/Img/CardBoard.png"/>
    </Window.Background>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Client;component/Img/CardBoard.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Stretch">
            <Label VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="43" Content="Last lap" FontSize="24"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontWeight="Bold"/>
        </StackPanel>
        <StackPanel x:Name="rankLastLapBox" Orientation="Horizontal" Margin="0,55,0,0" VerticalAlignment="Top">
            <Image Height="105" Width="71" Source="/Client;component/Img/cards/spades/10.png" Stretch="Fill" VerticalAlignment="Top" Margin="25,10,4,0"/>
            <Image Height="105" Width="71" Source="/Client;component/logo.ico" Stretch="Fill" VerticalAlignment="Top" Margin="0,10,4,0"/>
            <Image Height="105" Width="71" Source="/Client;component/logo.ico" Stretch="Fill" VerticalAlignment="Top" Margin="0,10,4,0"/>
            <Image Height="105" Width="71" Source="/Client;component/logo.ico" Stretch="Fill" VerticalAlignment="Top" Margin="0,10,4,0"/>
        </StackPanel>
        <Label Content="Label" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="25,176,0,0" VerticalAlignment="Top" Width="71" Height="34"/>
        <Label Content="Label" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="101,176,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.981,1.688" Height="34" Width="70"/>
        <Label Content="Label" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="176,176,0,0" VerticalAlignment="Top" RenderTransformOrigin="4.308,0.525" Height="34" Width="70"/>
        <Label Content="Label" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="251,176,0,0" VerticalAlignment="Top" RenderTransformOrigin="6.218,0.68" Height="34" Width="69"/>
        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Height="326" Margin="195,0,154,-126" VerticalAlignment="Bottom" Width="581">
            <Image x:Name="userCard1" AllowDrop="True"  HorizontalAlignment="Left" Height="148" VerticalAlignment="Center" Width="100" Source="/Client;component/Img/cards/diamond/q.png" RenderTransformOrigin="0.5,0.5" Margin="34,0,0,0" MouseLeftButtonDown="userCard1_MouseLeftButtonDown">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-17.377"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Image x:Name="userCard2" AllowDrop="True" HorizontalAlignment="Left" Height="148" VerticalAlignment="Center" Width="100" Source="/Client;component/Img/cards/spades/k.png" RenderTransformOrigin="0.5,0.5" Margin="-40,-33,0,0">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-10.533"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Image x:Name="userCard3" HorizontalAlignment="Left" Height="148" VerticalAlignment="Center" Width="100" Source="/Client;component/Img/cards/spades/a.png" Margin="-42,-54,0,0" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-4.928"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Image x:Name="userCard4" HorizontalAlignment="Left" Height="148" VerticalAlignment="Center" Width="100" Source="/Client;component/Img/cards/spades/4.png" Margin="-45,-59,0,0"/>
            <Image x:Name="userCard5" HorizontalAlignment="Left" Height="148" VerticalAlignment="Center" Width="100" Source="/Client;component/Img/cards/diamond/3.png" Margin="-35,-59,0,0"/>
            <Image x:Name="userCard6" HorizontalAlignment="Left" Height="148" VerticalAlignment="Center" Width="100" Source="/Client;component/Img/cards/clubs/j.png" Margin="-42,-47,0,0" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="6.247"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Image x:Name="userCard7" HorizontalAlignment="Left" Height="148" VerticalAlignment="Center" Width="100" Source="/Client;component/Img/cards/clubs/q.png" Margin="-38,36,0,61" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="14.594"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Image x:Name="userCard8" HorizontalAlignment="Left" Height="148" VerticalAlignment="Center" Width="100" Source="/Client;component/Img/cards/diamond/2.png" Margin="-43,8,0,0" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="21.135"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
        </StackPanel>
        <StackPanel Grid.Column="1" AllowDrop="True" Orientation="Horizontal" HorizontalAlignment="Center" Height="138" Margin="274,292,256,0" VerticalAlignment="Top" Width="400">
            <Image x:Name="boardCard1" Width="100" Drop="Image_Drop" Source="/Client;component/logo.ico" Stretch="Fill"/>
            <Image Width="100" Source="/Client;component/logo.ico" Stretch="Fill"/>
            <Image Width="100" Stretch="Fill" Source="/Client;component/logo.ico"/>
            <Image Width="100" Source="/Client;component/logo.ico" Stretch="Fill"/>
        </StackPanel>
    </Grid>
</Window>
