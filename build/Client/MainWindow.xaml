<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Card Games" Height="720" Width="1280" Background="#FFFC575E" WindowState="Maximized" WindowStyle="None" ResizeMode="NoResize" KeyDown="Window_KeyDown">
    <Grid VerticalAlignment="Center" Background="#FFFC575E">
        <StackPanel HorizontalAlignment="Center" Width="602" Margin="334,0,344,0">
            <Label x:Name="Title" Content="Card Game" HorizontalContentAlignment="Center" VerticalAlignment="Top" Height="125" FontSize="72" RenderTransformOrigin="0.467,0.652" HorizontalAlignment="Left" Width="613" Margin="0,0,0,50"/>
            <TextBox x:Name="name_txtbox" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Height="42" Margin="0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="603" FontSize="24" OpacityMask="#FF44BBFF" Background="#FF44BBFF" Foreground="#FF112233" RenderTransformOrigin="0.5,0.5"/>
            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                <TextBox x:Name="ip_txtbox" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Height="42" Margin="0" TextWrapping="Wrap" Text="127.0.0.1" VerticalAlignment="Top" Width="440" FontSize="24" OpacityMask="#FF44BBFF" Background="#FF44BBFF" Foreground="#FF112233" RenderTransformOrigin="0.5,0.5"/>
                <TextBox x:Name="port_txtbox" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Height="42" Margin="15,0,0,0" TextWrapping="Wrap" Text="8989" VerticalAlignment="Top" Width="146" FontSize="24" OpacityMask="#FF44BBFF" Background="#FF44BBFF" Foreground="#FF112233" Grid.ColumnSpan="2" RenderTransformOrigin="0.5,0.5"/>
            </StackPanel>
            <Button x:Name="connectButton" Content="Connect" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="0,15,0,0" VerticalAlignment="Top" Width="603" Grid.ColumnSpan="2" Height="43" Background="#FF66CC99" FontSize="22" BorderBrush="{x:Null}" BorderThickness="0" Click="connectButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
